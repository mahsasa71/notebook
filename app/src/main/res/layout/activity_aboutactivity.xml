        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:id="@+id/phone"
        android:layout_centerInParent="true"
        android:text="021-66918178-9"/>
